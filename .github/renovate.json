{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:js-app",
    "config:best-practices",
    "npm:unpublishSafe"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "platformAutomerge": true,
    "automergeType": "pr",
    "pruneBranchAfterAutomerge": true,
    "platformCommit": "enabled"
  },
  "packageRules": [
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "automerge": true,
      "platformAutomerge": true,
      "automergeType": "pr",
      "pruneBranchAfterAutomerge": true,
      "platformCommit": "enabled",
      "matchPackageNames": [
        "/lint/",
        "/prettier/"
      ]
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchCurrentVersion": "!/^0/",
      "automerge": true,
      "platformAutomerge": true,
      "automergeType": "pr",
      "pruneBranchAfterAutomerge": true,
      "platformCommit": "enabled"
    }
  ]
}
